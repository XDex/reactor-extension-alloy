{
  "name": "reactor-extension-alloy",
  "version": "0.0.1",
  "description": "The Adobe Experience Platform Web SDK allows for streaming data into the platform, syncing identities, personalizing content, and more.",
  "author": "Adobe",
  "license": "Apache-2.0",
  "scripts": {
    "prepush-msg": "echo 'Running pre-push scripts...' && exit 0",
    "precommit-msg": "echo 'Running pre-commit scripts...' && exit 0",
    "clean": "rm -rf dist",
    "build:dev:lib": "babel src/lib --out-dir dist/lib --watch",
    "build:dev:view": "THEME_LIGHTEST=true parcel src/view/**/*.html --public-url . -d dist/view",
    "build:dev": "npm-run-all clean --parallel build:dev:lib build:dev:view",
    "build:prod:lib": "babel src/lib --out-dir dist/lib",
    "build:prod:view": "THEME_LIGHTEST=true parcel build src/view/**/*.html --public-url . -d dist/view --experimental-scope-hoisting",
    "build:prod": "npm-run-all clean --parallel build:prod:lib build:prod:view",
    "package": "npm run build:prod && npx @adobe/reactor-packager",
    "sandbox": "npx @adobe/reactor-sandbox",
    "dev": "npm-run-all --parallel build:dev sandbox",
    "lint": "eslint \"*.js\" \"src/**/*.{js,jsx}\" \"test/**/*.{js,jsx}\"",
    "format": "prettier --write \"*.{js,jsx}\" \"{src,test}/**/*.{js,jsx}\"",
    "test": "karma start --single-run",
    "test:coverage": "karma start --single-run --reporters spec,coverage",
    "test:watch": "karma start",
    "test:watch:chrome": "karma start --browsers Chrome"
  },
  "pre-commit": [
    "precommit-msg",
    "format",
    "lint"
  ],
  "pre-push": [
    "prepush-msg",
    "test"
  ],
  "dependencies": {
    "@react/react-spectrum": "^2.20.0",
    "classnames": "^2.2.6",
    "formik": "^1.5.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "jasmine-core": "^3.4.0",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-jasmine-matchers": "^4.0.1",
    "karma-rollup-preprocessor": "^7.0.0",
    "karma-spec-reporter": "0.0.32",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.0",
    "puppeteer": "^1.15.0",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-node-resolve": "^4.2.3",
    "stylus": "^0.54.5"
  }
}
