.XdmTreeNode {
  &.is-invalid {
    color: #ec5b62;

    .XdmTreeNode-type {
      &:before {
        border-left-color: #ec5b62;
      }
      color: inherit;
    }
  }
}

.XdmTreeNode-type {
  &:before {
    content: " ";
    border-left: 1px solid #cacaca;
    padding-left: 8px;
  }
  color: #707070;
}
